<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/background_light">
    <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/result"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/newNumber"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/newNumber"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/newNumber"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:inputType="numberSigned|numberDecimal"
            android:background="@android:color/transparent"
            android:ems="10"
            android:id="@+id/newNumber"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="@+id/result"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"
            app:layout_constraintEnd_toEndOf="@+id/result"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button0"
            app:layout_constraintStart_toEndOf="@+id/buttonProcent"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonProcent" android:textStyle="bold"
            android:textSize="24sp" android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toStartOf="@+id/button4"
            android:textStyle="bold" android:textSize="24sp" android:background="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintBaseline_toBaselineOf="@+id/button1" android:textSize="24sp"
            android:background="@android:color/background_light" android:textStyle="bold" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" android:textStyle="bold" android:textSize="24sp"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            app:layout_constraintStart_toStartOf="@+id/button7"
            android:textStyle="bold" android:textSize="24sp" android:background="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintBaseline_toBaselineOf="@+id/button4" android:textSize="24sp"
            android:background="@android:color/background_light" android:textStyle="bold" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" android:textStyle="bold" android:textSize="24sp"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="7"
            android:layout_width="90dp"
            android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/buttonC"
            app:layout_constraintStart_toStartOf="@+id/buttonC"
            android:layout_height="90dp" android:textStyle="bold" android:textSize="24sp"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintBaseline_toBaselineOf="@+id/button7" android:textStyle="bold" android:textSize="24sp"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8" android:textStyle="bold" android:textSize="24sp"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="/"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonDivide"
            app:layout_constraintStart_toEndOf="@+id/buttonC"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonC" android:textStyle="bold" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" android:background="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="NEG"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonNeg"
            app:layout_constraintStart_toEndOf="@+id/buttonMultiply"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonMultiply" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" android:background="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="X"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonMultiply"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivide" android:textStyle="bold"
            android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="-"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonMinus"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            android:textStyle="bold" android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="+"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonPlus"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6" android:textStyle="bold" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" android:background="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="."
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonDot"
            app:layout_constraintStart_toEndOf="@+id/button0"
            app:layout_constraintBaseline_toBaselineOf="@+id/button0"
            android:textStyle="bold" android:textSize="24sp" android:background="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="="
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:id="@+id/buttonEquals"
            app:layout_constraintStart_toEndOf="@+id/buttonDot"
            app:layout_constraintTop_toBottomOf="@+id/buttonPlus" android:textStyle="bold" android:textSize="24sp"
            android:background="@color/colorPrimaryDark" android:textColor="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="%"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonProcent"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            app:layout_constraintStart_toStartOf="@+id/button1"
            android:textStyle="bold" android:textSize="24sp" android:background="@android:color/background_light"
            android:textAllCaps="true" android:textColorLink="@color/colorPrimaryDark" android:selectAllOnFocus="true"
            style="?android:attr/borderlessButtonStyle"/>
    <Button
            android:text="C"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonC"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/newNumber"
            app:layout_constraintStart_toStartOf="@+id/result"
            android:textStyle="bold" android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/background_light" android:textAllCaps="true"
            android:textColorLink="@color/colorPrimaryDark"
            style="?android:attr/borderlessButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>